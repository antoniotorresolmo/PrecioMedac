<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RadioButtonModulo" parent="Theme.MyApplication">
        <item name="android:buttonTint">@color/RadioButtonModulo</item>
    </style>

    <style name="RadioButtonTurno" parent="Theme.MyApplication">
        <item name="android:buttonTint">@color/RadioButtonTurno</item>
    </style>

    <style name="lblSol" parent="Theme.MyApplication">
        <item name="android:textColor">@color/lblSolText</item>
    </style>

    <style name="switchIva" parent="Theme.MyApplication">
        <item name="android:trackTint">@color/switchButton</item>
        <item name="android:thumbTint">@color/switchButton</item>
        <item name="android:shadowColor">@color/switchButton</item>
    </style>

    <style name="lblTitulos" parent="Theme.MyApplication">
        <item name="android:fontFamily">monospace</item>
    </style>
</resources>